class employee{

public:
    string name;
    string company;
    int age;
    
    employee(string a,string b,int c){
        name=a;
        company=b;
        age=c;
    }
    
    void introduce()
    {
        cout<<"Hello my name is "<<name<<" i am  "<<age<<" years old and i work for "<<company<<"\n";
    }
    
};


int main(){
    
    ios::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    
//    employee e1;
